{{> header.hbs}}
<h1>Anamnese</h1>
<div class="col-md-4">
    <form method="POST" action="/anamneses/{{data.id}}/edit">
        <div class="form-group">
            <label for="drugs">Médico:</label>
            <span id="drugs" name="drugs">{{medic.name}}</span>
        </div>

        <div class="form-group">
            <label for="drugs">Paciente:</label>
            <span id="drugs" name="drugs">{{patient.name}}</span>
        </div>

        <div class="form-group">
            <label for="drugs">Remédios:</label>
            <textarea id="drugs" name="drugs" class="form-control">{{data.drugs}}</textarea>
        </div>

        <div class="form-group">
            <label for="orders">Pedidos Médicos:</label>
            <textarea id="orders" name="orders" class="form-control">{{data.orders}}</textarea>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" value="{{data.date}}" class="form-control">
        </div>
        <div class="btn-group">
            <input type="submit" class="btn btn-success" value="Editar">
            <a class="btn btn-warning" href="/patients/{{data.patient_id}}">Voltar</a>
        </div>
    </form>
</div>
{{> footer.hbs}}